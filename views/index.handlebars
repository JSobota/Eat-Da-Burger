<h1>Eat Da Burger</h1>

<main>
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				{{#each burgers}}
					{{#unless this.devoured}}
					<div>
						<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
							<button type="submit" class="burgerAvail">{{this.burger_name}}</button>
						</form>
					</div>
					{{/unless}}
					{{/each}}
			</div>
			<div class="col-md-6">
				{{#each burgers}}
				{{#if this.devoured}}
					<div class="burgersEaten">
						<div>
							{{this.burger_name}}
						</div>
					</div>
					{{/if}}
					{{/each}}
			</div>
		</div>
	</div>
</main>

<h2>Add A Burger</h2>

<div class="row">
	<div class="col-md-12">
		<form action="/burgers" method="POST">
			<input type="text" id="name" name="burger_name" placeholder="Awesome Burger">
			<button type="submit" class="addBurgerButton">Add This Beast</button>
		</form>
	</div>
</div>